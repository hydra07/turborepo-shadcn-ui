{
  "name": "template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf node_modules **/*/node_modules **/.next **/.turbo pnpm-lock.yaml",
    "nuke": "pnpm clean && pnpm install",
    "add:web": "pnpm add --filter web",
    "add:ui": "pnpm add --filter @repo/ui"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.25.0"
}
